@model WebApp.Models.Idea

@{
    ViewData["Title"] = "Delete";
}
<h3>Are you sure you want to delete this Idea permanently?</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ThumbUp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ThumbUp)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ThumbDown)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ThumbDown)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumComment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumComment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumView)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumView)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Upload files")
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var file in Model.FileOnFileSystems)
                {
                    <li>
                        @($"{file.Name}{file.Extension}")
                    </li>
                }
            </ul>
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="submit" value="Confirm Delete" class="btn btn-danger" />
        <a class="btn btn-success" asp-controller="Home" asp-action="Index">Index</a>
    </form>
</div>

