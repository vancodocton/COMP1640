@model WebApp.ViewModels.CreateIdeaViewModel

@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>
<h4>IdeaViewModel</h4>
<div class="row justify-content-center">
    <div class="col-lg-5 col-sm-8">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="form-label"></label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="form-label"></label>
                <select asp-for="CategoryId" asp-items=@Model.Categories class="form-select">
                    <option></option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Documents" class="form-label"></label>
                <input type="file" asp-for="Documents" class="form-control" multiple/>
                <span asp-validation-for="Documents" class="text-danger"></span>
            </div>

            <div class="form-check">
                <label asp-for="IsCheckTerm" class="form-check-label">
                    <b>
                        By checking this box, you are agreeing to
                        <a href="#" data-bs-toggle="modal" data-bs-target="#Modal">
                            Terms and Conditions
                        </a>
                        to create new idea.
                    </b>
                </label>
                <input asp-for="IsCheckTerm " type="checkbox" class="form-check-input" required title="You must agree to Terms and Conditions" />
                <span asp-validation-for="IsCheckTerm" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsIncognito">
                <label class="form-check-label" asp-for="IsIncognito"></label>
            </div>

            <div class="form-group">
                <input type="submit" value="Create Idea" class="btn btn-primary mb1 black bg-yellow" />
                <a asp-controller="Home" asp-action="Index" type="button" class="btn btn-primary">Back to list</a>
            </div>
        </form>

    </div>
</div>
