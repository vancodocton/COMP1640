@model WebApp.ViewModels.AccountCreateViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<a asp-area="Admin" asp-controller="Account" asp-action="Index">Return index page</a>

<form asp-area="Admin" asp-controller="Account" asp-action="Create" method="post">
    <div class="form-floating">
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="Input.Email"></label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
        <label asp-for="Input.Password"></label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
        <label asp-for="Input.ConfirmPassword"></label>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-floating">
        <input asp-for="FullName" class="form-control" autocomplete="on" aria-required="true" />
        <label asp-for="FullName"></label>
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="BirthDate" class="form-control" autocomplete="on" aria-required="true" />
        <label asp-for="BirthDate"></label>
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Address" class="form-control" autocomplete="on" aria-required="true" />
        <label asp-for="Address"></label>
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <select asp-for="Role" asp-items="@Model.Roles" class="form-select" required>
            <option></option>
        </select>
        <label asp-for="Role"></label>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <select asp-for="DepartmentId" asp-items="@Model.Departments" class="form-select">
            <option></option>
        </select>
        <label asp-for="DepartmentId"></label>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="submit" class="w-100 btn btn-lg btn-primary" />
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}