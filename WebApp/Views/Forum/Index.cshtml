@model WebApp.ViewModels.ForumViewModel

@{
    ViewData["Title"] = "Forum";
}

<div class="row">
    <div class="col-lg-3">
        <a asp-action="Create" asp-controller="Forum" class="btn btn-primary">Create New Idea</a>
        <hr />
        <div class="list-group list-group-flush">
            <a id="cid-null" class="list-group-item" asp-action="Index">All ideas</a>
            @foreach (var category in Model.Categories)
            {
                <a id="cid-@category.Id" class="list-group-item" asp-action="Index" asp-route-cid="@category.Id">@category.Name</a>
            }
        </div>
    </div>

    <div class="col-lg-9">
        @foreach (var idea in Model.Ideas)
        {
            <div class="card mb-3">
                <div class="card-header">
                    <a asp-action="Index" asp-route-cid="@idea.CategoryId">@idea.Category.Name</a>
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        @Html.DisplayFor(modelItem => idea.Title)
                    </h5>
                    <p class="card-text">
                        @Html.DisplayFor(modelItem => idea.Content)
                    </p>
                </div>
                <div class="card-footer">
                    <span><i class="fa-regular fa-comments"></i> 1</span>
                    <form id="react-idea-@idea.Id" class="btn-group" role="group" aria-label="React button group @idea.Id">
                        <input type="radio" class="btn-check" name="btnradio-@idea.Id" id="thumbupbtn-@idea.Id" autocomplete="off">
                        <label class="btn btn-outline-primary" for="thumbupbtn-@idea.Id">
                            <i class="fa-regular fa-thumbs-up"></i> Thumb Up
                        </label>

                        <input type="radio" class="btn-check" name="btnradio-@idea.Id" id="thumbdownbtn-@idea.Id" autocomplete="off">
                        <label class="btn btn-outline-danger" for="thumbdownbtn-@idea.Id">
                            <i class="fa-regular fa-thumbs-down"></i> Thumb Down
                        </label>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

